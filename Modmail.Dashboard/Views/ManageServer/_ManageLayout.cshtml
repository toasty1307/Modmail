@model dynamic

@{
	ViewBag.Title = ViewData["GuildName"]!;
	Layout = "_Layout";
}

<div class="d-flex flex-row bd-highlight w-100 h-100">
  <div style="flex: 200px">
    <ul class="nav sidebar flex-column h-100">
      <li class="nav-item">
        <a class="nav-link sidebar-item no-decoration text-white" aria-current="page" href="/manage/@ViewData["GuildId"]">
          <h2>
            <i class="bi bi-house-fill"></i> Home
          </h2>
          </a>
      </li>
      <li class="nav-item">
        <a class="nav-link sidebar-item no-decoration text-white" aria-current="page" href="/manage/@ViewData["GuildId"]/config">
          <h2>
            <i class="bi bi-gear-fill"></i> Config
          </h2>
        </a>
      </li>
      <li class="nav-item">
        <a class="nav-link sidebar-item no-decoration text-white" aria-current="page" href="/manage/@ViewData["GuildId"]/logs">
          <h2>
            <i class="bi bi-card-list"></i> Logs
          </h2>
        </a>
      </li>
    </ul>
  </div>
  <div class="w-100">
    @RenderBody()
  </div>
</div>

<style>
  .sidebar {
    background-color: #212529;
  }
  .sidebar-item:hover {
    background-color: #282c34;
  }
</style>
